# Environment Configuration Template
# Copy this file to deployment/.env and fill in your values
# DO NOT COMMIT deployment/.env TO GIT

# =============================================================================
# GCP Configuration
# =============================================================================

# Your GCP project ID (must be globally unique)
# Example: ai-pilot-assessment-prod
export GCP_PROJECT_ID="your-project-id-here"

# GCP region for resources
# Recommended: us-central1 (best Vertex AI availability)
export GCP_REGION="us-central1"

# GCP zone (for any zonal resources)
export GCP_ZONE="us-central1-a"

# =============================================================================
# Service Account Configuration
# =============================================================================

# Service account name (will be created by setup script)
export SERVICE_ACCOUNT_NAME="assessment-engine-sa"

# Service account email (auto-generated, don't change unless you know what you're doing)
export SERVICE_ACCOUNT_EMAIL="${SERVICE_ACCOUNT_NAME}@${GCP_PROJECT_ID}.iam.gserviceaccount.com"

# =============================================================================
# Firestore Configuration
# =============================================================================

# Firestore database name (use default)
export FIRESTORE_DATABASE="(default)"

# =============================================================================
# Cloud Storage Configuration
# =============================================================================

# Bucket name for static knowledge graph (must be globally unique)
# Auto-generated based on project ID, but you can customize
export BUCKET_NAME="${GCP_PROJECT_ID}-static-knowledge"

# =============================================================================
# Cloud Run Configuration
# =============================================================================

# Cloud Run service name
export CLOUD_RUN_SERVICE_NAME="assessment-engine"

# Cloud Run region (should match GCP_REGION)
export CLOUD_RUN_REGION="${GCP_REGION}"

# =============================================================================
# Vertex AI Configuration
# =============================================================================

# Vertex AI location (should match GCP_REGION for best performance)
export VERTEX_AI_LOCATION="${GCP_REGION}"

# Vertex AI model to use
# Options: gemini-1.5-flash (recommended), gemini-1.5-pro
export VERTEX_AI_MODEL="gemini-1.5-flash"

# =============================================================================
# Firebase Configuration
# =============================================================================

# Firebase project ID (should match GCP_PROJECT_ID)
export FIREBASE_PROJECT_ID="${GCP_PROJECT_ID}"

# =============================================================================
# Billing Configuration (Optional)
# =============================================================================

# Your GCP billing account ID (find with: gcloud billing accounts list)
# Example: 0X0X0X-0X0X0X-0X0X0X
# export BILLING_ACCOUNT_ID="your-billing-account-id"

# Budget alert email (for cost monitoring)
# export BUDGET_ALERT_EMAIL="your-email@example.com"

# Monthly budget in USD
# export MONTHLY_BUDGET_USD="50"
