rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - each user can only access their own data
    match /users/{userId} {
      // Allow read/write only to the user's own document
      allow read, write: if isOwner(userId);
      
      // Factors subcollection
      match /factors/{factorId} {
        // Allow read/write only to the user's own factors
        allow read, write: if isOwner(userId);
        
        // Journal entries subcollection
        match /journal/{entryId} {
          // Allow read/write only to the user's own journal entries
          allow read, write: if isOwner(userId);
        }
      }
      
      // Project evaluations subcollection (for future epics)
      match /project_evaluations/{evaluationId} {
        allow read, write: if isOwner(userId);
      }
      
      // User metadata subcollection (for future use)
      match /metadata/{metadataId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
