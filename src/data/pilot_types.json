  "selection_logic": {
    "description": "How to recommend pilots based on component bottlenecks",
    "rules": [
      {
        "if": "bottleneck_component == 'team_execution'",
        "then": "Recommend pilots from team_execution category",
        "prioritize_by": [
          "Quick wins: ai_copilot, skills_training (8-12 weeks)",
          "Strategic: team_augmentation (if budget allows)",
          "Foundation: knowledge_management (if high turnover)"
        ]
      },
      {
        "if": "bottleneck_component == 'system_capabilities'",
        "then": "Recommend pilots from system_capabilities category",
        "prioritize_by": [
          "Quick wins: intelligent_automation, data_quality_improvement",
          "High impact: ai_features (if data quality is good)",
          "Strategic: system_upgrade (if current system is fundamentally inadequate)"
        ]
      },
      {
        "if": "bottleneck_component == 'process_maturity'",
        "then": "Recommend pilots from process_maturity category",
        "prioritize_by": [
          "Quick wins: process_automation (if process is documented)",
          "Foundation: process_standardization (if process is ad-hoc)",
          "Strategic: workflow_optimization (if major inefficiencies exist)"
        ]
      },
      {
        "if": "multiple_components_are_bottlenecks",
        "then": "Recommend pilots that address multiple components",
        "examples": [
          "System upgrade can improve both system_capabilities and process_maturity",
          "Process intelligence can improve both process_maturity and team_execution (through insights)"
        ]
      }
    ]
  },
  
  "pilot_recommendation_template": {
    "structure": {
      "output_context": "Remind user what output we're improving",
      "current_state": "Show current component ratings and bottleneck",
      "gap": "Show gap between actual and required quality",
      "recommended_pilots": [
        {
          "pilot_name": "Name of pilot",
          "rationale": "Why this pilot addresses the bottleneck",
          "expected_impact": "How much improvement (star rating)",
          "timeline": "How long it takes",
          "cost": "Estimated cost range",
          "prerequisites": "What's needed to start",
          "next_steps": "How to get started"
        }
      ],
      "alternatives": "Other pilots to consider"
    },
    "example": "For Sales Forecast (current accuracy: ⭐⭐, target: ⭐⭐⭐⭐):\n\nBottleneck: Team Execution (⭐⭐)\n\nRecommended Pilot: AI Copilot for Sales Forecasting\n- Rationale: Augments team's forecasting capability without hiring\n- Expected Impact: Improve accuracy from ⭐⭐ to ⭐⭐⭐⭐ (2 star improvement)\n- Timeline: 10-12 weeks\n- Cost: €20k-€35k\n- Prerequisites: 2+ years of historical sales data, Salesforce API access\n- Next Steps: Validate data quality, select AI vendor, run 4-week pilot\n\nAlternatives:\n- Skills Training: Lower cost (€10k) but slower impact (6 months)\n- Team Augmentation: Hire FP&A analyst (€80k/year) for sustainable improvement"
  }
}
