{
  "description": "Taxonomy of pilot project types mapped to component improvements",
  "version": "1.0",
  
  "pilot_categories": {
    "team_execution": {
      "component": "Team Execution Ability",
      "description": "Pilots that improve team capability to execute and deliver outputs",
      "pilot_types": [
        {
          "id": "ai_copilot",
          "name": "AI Copilot / Assistant",
          "description": "Deploy AI tools to augment team members' capabilities",
          "typical_use_cases": [
            "Code completion for developers",
            "Writing assistance for content creators",
            "Data analysis assistance for analysts",
            "Customer response suggestions for support agents"
          ],
          "typical_impact": "Increase productivity 20-40%, reduce errors 15-30%",
          "typical_timeline": "6-12 weeks",
          "typical_cost": "€10k-€30k",
          "prerequisites": ["Team willingness to adopt", "Clear use case", "Data/API access"],
          "examples": [
            "GitHub Copilot for engineering team",
            "Grammarly Business for sales proposals",
            "Tableau AI for FP&A analysts"
          ]
        },
        {
          "id": "skills_training",
          "name": "Skills Training Program",
          "description": "Structured training to upskill team members",
          "typical_use_cases": [
            "Technical skills training (e.g., SQL, Python)",
            "Process training (e.g., forecasting methodology)",
            "Tool training (e.g., CRM, ERP)",
            "Soft skills (e.g., communication, problem-solving)"
          ],
          "typical_impact": "Increase capability 1-2 star levels over 3-6 months",
          "typical_timeline": "8-16 weeks",
          "typical_cost": "€5k-€20k",
          "prerequisites": ["Training budget", "Time commitment from team", "Clear skill gaps"],
          "examples": [
            "SQL training for sales ops team",
            "Forecasting methodology workshop",
            "Advanced Excel for finance team"
          ]
        },
        {
          "id": "team_augmentation",
          "name": "Team Augmentation / Hiring",
          "description": "Hire specialists or contractors to fill capability gaps",
          "typical_use_cases": [
            "Hire senior specialist (e.g., data engineer, FP&A lead)",
            "Contract specialists for specific projects",
            "Offshore team augmentation",
            "Fractional executive (e.g., part-time CFO)"
          ],
          "typical_impact": "Immediate capability boost, sustainable if permanent",
          "typical_timeline": "4-12 weeks (recruiting) + onboarding",
          "typical_cost": "€50k-€150k annually per hire",
          "prerequisites": ["Hiring budget", "Clear role definition", "Management capacity"],
          "examples": [
            "Hire senior data analyst for sales ops",
            "Contract FP&A consultant for 6 months",
            "Offshore development team"
          ]
        },
        {
          "id": "knowledge_management",
          "name": "Knowledge Management System",
          "description": "Build knowledge base, documentation, or runbooks to capture expertise",
          "typical_use_cases": [
            "Support knowledge base",
            "Process documentation",
            "Runbooks for IT operations",
            "Best practices library"
          ],
          "typical_impact": "Reduce onboarding time 30-50%, improve consistency",
          "typical_timeline": "8-12 weeks",
          "typical_cost": "€10k-€25k",
          "prerequisites": ["Subject matter experts available", "Tool selection", "Maintenance plan"],
          "examples": [
            "Zendesk knowledge base for support team",
            "Confluence wiki for engineering runbooks",
            "SharePoint library for sales best practices"
          ]
        }
      ]
    },
    
