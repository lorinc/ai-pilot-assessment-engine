      "ITSM", "service desk", "help desk", "tickets",
      "changes", "patches", "configuration", "CMDB",
      "capacity", "performance", "scalability"
    ],
    "pain_points": [
      "too many incidents", "MTTR is too high", "systems are down",
      "alert fatigue", "too many false positives", "missing alerts",
