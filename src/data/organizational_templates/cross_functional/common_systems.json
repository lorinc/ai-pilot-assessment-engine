  "inference_rules": {
    "system_matching": {
      "description": "How to match user mentions to systems",
      "rules": [
        "Match exact name (case-insensitive)",
        "Match aliases",
        "Handle common misspellings",
        "Ask for clarification if ambiguous"
      ]
    },
    "output_inference": {
      "description": "When user mentions a system, infer likely outputs",
      "confidence_levels": {
        "high": "0.7-0.9 - System is strongly associated with specific outputs",
        "medium": "0.5-0.6 - System commonly used for these outputs",
        "low": "0.3-0.4 - System could be used for these outputs"
      }
    }
  },
  
  "unknown_system_handling": {
    "description": "What to do when user mentions an unknown system",
    "steps": [
      "1. Acknowledge the system name",
      "2. Ask clarifying questions: 'What type of system is {system}? (CRM, ERP, etc.)'",
      "3. Ask: 'What outputs does your team create using {system}?'",
      "4. Store for future reference",
      "5. Proceed with assessment using user's information"
    ],
    "example": "User mentions 'Cogglepoop'. System responds: 'I'm not familiar with Cogglepoop. What type of system is it - CRM, ERP, project management, or something else? And what outputs does your team create using it?'"
  }
